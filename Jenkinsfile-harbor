pipeline {
    agent any
    stages {
        stage('Build App') {
            steps {
                sh 'echo "Building Sa-Frontend"'
                sh 'cd ${WORKSPACE}/sa-frontend && npm install && npm run build'
                sh 'echo "Building Sa-webapp"'
                sh 'cd ${WORKSPACE}/sa-webapp && mvn install'
            }
        }
        stage('Build Images') {
            steps {
                sh 'echo "Creating fronted Image"'
                sh 'cd ${WORKSPACE}/sa-frontend && docker build -t sa-frontend:1.0.0 .'
                sh 'echo "Frontend Image created"'
                sh 'echo "Creating webapp Image"'
                sh 'cd ${WORKSPACE}/sa-webapp && docker build -t sa-webapp:1.0.0 .'
                sh 'echo "Webapp Image Created"'
                sh 'echo "Creating sa-logic image"'
                sh 'cd ${WORKSPACE}/sa-logic && docker build -t sa-logic:1.0.0 .'
                sh 'echo "sa-logic image created"'

            }
        }
        stage('push to harbor-dev'){
            when {
                branch 'develop'
                }
            steps {
                withDockerRegistry([ credentialsId: "harbor_id", url: "https://harbor.postelic.com" ]){
                sh 'docker tag sa-frontend:1.0.0 harbor.postelic.com/harbor-dev/sa-frontend:1.0.0'
                sh 'docker tag sa-webapp:1.0.0 harbor.postelic.com/harbor-dev/sa-webapp:1.0.0'
                sh 'docker tag sa-frontend:1.0.0 harbor.postelic.com/harbor-dev/sa-logic:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-dev/sa-frontend:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-dev/sa-webapp:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-dev/sa-logic:1.0.0'
                }
            }
        }
        stage('push to harbor-prod'){
            when {
                branch 'master'
                }
            steps {
                withDockerRegistry([ credentialsId: "harbor_id", url: "https://harbor.postelic.com" ]){
                sh 'docker tag sa-frontend:1.0.0 harbor.postelic.com/harbor-prod/sa-frontend:1.0.0'
                sh 'docker tag sa-webapp:1.0.0 harbor.postelic.com/harbor-prod/sa-webapp:1.0.0'
                sh 'docker tag sa-frontend:1.0.0 harbor.postelic.com/harbor-prod/sa-logic:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-prod/sa-frontend:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-prod/sa-webapp:1.0.0'
                sh 'docker push harbor.postelic.com/harbor-prod/sa-logic:1.0.0'
                }
            }
        }

    }
}